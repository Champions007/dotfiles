#!/bin/sh

 [ "$(stat -c %y ~/.cache/corona 2>/dev/null | cut -d ' ' -f1)" != "$(date '+%Y-%m-%d')" ] &&
     curl https://corona-stats.online/Latvia > ~/.cache/corona

grep "Latvia" ~/.cache/corona |
    sed "s/\s*//g ; s/â•‘//g ; s/â”‚/;/g" |
    sed 's/\x1b\[[0-9;]*m//g' |
    awk -F ';' '{print "ðŸ¤§" $3 " ðŸ’€"$5  " " $4 " ("((($5 / $3) * 100))"%)"}'
